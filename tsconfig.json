{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "ES2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "react"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
